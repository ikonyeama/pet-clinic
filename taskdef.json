{
    "family": "Petclinic",
    "containerDefinitions": [
        {
            "image": "%REPOSITORY_URI%:v_%BUILD_NUMBER%",
            "name": "PetsContainer",
            "cpu": 500,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "environment": [
                    {
                        "name": "SPRING_PROFILES_ACTIVE",
                        "value": "mysql"
                    },
                    {
                        "name": "SPRING_DATASOURCE_URL",
                        "value": "pp21fz2b5qapk0.c5h9zlwvp6fd.eu-west-1.rds.amazonaws.com"
                    },
                    {
                        "name" "SPRING_DATASOURCE_USERNAME",
                        "value": "root"
                    },
                    {
                        "name": "SPRING_DATASOURCE_PASSWORD",
                        "value": "root2481"
                    }
                ],
            'dockerLabels': {
                'string': 'string'
            },
            'logConfiguration': {
                'logDriver': 'awslogs',
                'options': {
                    'awslogs-group': "ECSLogGroup-" + project_name,
                    'awslogs-region': REGION,
                    'awslogs-stream-prefix': project_name
                    }
                }				
        }
    ]
}
