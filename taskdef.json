{
    "family": "Petclinic",
    "containerDefinitions": [
        {
            "image": "%REPOSITORY_URI%:v_%BUILD_NUMBER%",
            "name": "PetsContainer",
            "cpu": 20,
            "memory": 512,
            "essential": true,
            "portMappings": [
                {
                    "containerPort": 80,
                    "hostPort": 80
                }
            ],
            "environment": [
                    {
                        "name": "SPRING_PROFILES_ACTIVE",
                        "value": "mysql"
                    },
                    {
                        "name": "SPRING_DATASOURCE_URL",
                        "value": "dns_name"
                    },
                    {
                        "name" "SPRING_DATASOURCE_USERNAME",
                        "value": "root"
                    },
                    {
                        "name": "SPRING_DATASOURCE_PASSWORD",
                        "value": "root2481"
                    }
                ],
        }
    ]
}
